function getmilk(money)
{
    alert("leave the home");
    alert("move A");
    var bottles=Math.floor(money/1.5);
    alert("take the "+bottles+" bottles and total money is  "+money+" .");            //taking the money and printing the number of bottles
    alert("move A");
    alert("reach the home");
}

getmilk(prompt("Enter the money"));
